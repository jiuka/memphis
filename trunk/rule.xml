<?xml version="1.0" encoding="UTF-8"?>
<rules version="0.1" autor="MariusRieder">

    <!-- Draw landuse/natural first -->
    <rule e="way" k="landuse|natural" v="*">
       <rule e="way" k="natural" v="water">
            <polygone color="0.71,0.84,0.95"/>
            <line color="0.66,0.66,0.66" width="1"/>
        </rule>
       <rule e="way" k="landuse|natural" v="wood|forest">
            <polygone color="0.45,0.74,0.51"/>
            <line color="0.44,0.76,0.56" width="1"/>
       </rule>
    </rule>
    <rule e="way" k="waterway" v="*">
       <rule e="way" k="waterway" v="drain">
            <line color="0.71,0.84,0.95" width="1"/>
        </rule>
       <rule e="way" k="waterway" v="stream">
            <line color="0.71,0.84,0.95" width="3"/>
        </rule>
       <rule e="way" k="waterway" v="canal">
            <line color="0.71,0.84,0.95" width="5"/>
        </rule>
       <rule e="way" k="waterway" v="river">
            <line color="0.71,0.84,0.95" width="6"/>
        </rule>
    </rule>
    <rule e="way" k="building" v="*">
        <polygone color="0.9,0.9,0.9"/>
        <line color="0.8,0.8,0.8" width="0.1"/>
    </rule>
    
    
    <!-- Draw highways -->
    <rule e="way" k="highway" v="*">
        <rule e="way" k="highway" v="footway|track">
            <line color="0.8,0.8,0.8" width="1"/>
        </rule>
        <rule e="way" k="highway" v="residential|unclassified|pedestrian">
            <line color="0.8,0.8,0.8" width="2"/>
            <line color="1,1,1" width="1"/>
        </rule>
        <rule e="way" k="highway" v="tertiary">
            <line color="0.8,0.8,0.8" width="3"/>
            <line color="1,1,1" width="2"/>
        </rule>
        <rule e="way" k="highway" v="secondary">
            <line color="0.8,0.8,0.8" width="4"/>
            <line color="1,1,1" width="3"/>
        </rule>
        <rule e="way" k="highway" v="primary">
            <line color="0.8,0.2,0.2" width="4"/>
            <line color="0.9,0.3,0.3" width="3"/>
        </rule>
        <rule e="way" k="highway" v="trunk">
            <line color="0.2,0.8,0.2" width="5"/>
            <line color="0.3,0.9,0.3" width="4"/>
        </rule>
        <rule e="way" k="highway" v="motorway">
            <line color="0.2,0.2,0.8" width="6"/>
            <line color="0.3,0.3,0.9" width="5"/>
        </rule>
    </rule>
    

